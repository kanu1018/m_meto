<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="제목을 입력하세요."
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/add_subplan_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="시작"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000000"/>
        <Spinner
            android:id="@+id/add_subplan_starttime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:entries="@array/time"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="종료"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000000"/>
        <Spinner
            android:id="@+id/add_subplan_endtime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:entries="@array/time"/>
    </LinearLayout>
    <EditText
        android:id="@+id/add_subplan_place"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="장소"
        android:textSize="20sp"
        android:gravity="center|left"/>
    <Spinner
        android:id="@+id/add_subplan_mission"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:entries="@array/mission"/>
    <EditText
        android:id="@+id/add_subplan_memo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="메모"
        android:textSize="20sp"
        android:gravity="center|left"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <Button
            android:id="@+id/add_subplan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="등록"/>
        <Button
            android:id="@+id/add_subplan_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="취소"/>
    </LinearLayout>
</LinearLayout>
